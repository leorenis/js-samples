{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "plugins": [
        "react", "jsx-a11y", "import"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "global-require":"off",
        "import/prefer-default-export": "off",
        "no-unused-expressions": ["error", {"allowTaggedTemplates": true}]
    }
}
